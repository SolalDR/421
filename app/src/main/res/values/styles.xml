<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- Style des activitÃ©s -->

    <style name="AppTheme.layoutActivity">
        <item name="android:background">@color/secondDarkColor</item>
    </style>

    <style name="AppTheme.activityTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/firstLightColor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.textView">
        <item name="android:textColor">@color/firstLightColor</item>
        <item name="android:textAllCaps">true</item>
    </style>



    <!-- Style Bouttons -->


    <style name="AppTheme.buttonNav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.buttonLight">
        <item name="android:background">@color/firstLightColor</item>
        <item name="android:textColor">@color/secondDarkColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.buttonDark">
        <item name="android:textColor">@color/firstLightColor</item>
        <item name="android:background">@color/firstDarkColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.buttonLightBottom">
        <item name="android:background">@color/firstLightColor</item>
        <item name="android:textColor">@color/secondDarkColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Style Champs de text -->


    <style name="AppTheme.customEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:ems">10</item>
        <item name="android:hint">Nom ici...</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:textColor">@color/firstLightColor</item>
        <item name="android:textColorHint">@color/secondLightColor</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>




</resources>
