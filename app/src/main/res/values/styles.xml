<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.mainButton"></style>

    <style name="AppTheme.activityTitle"></style>

    <style name="AppTheme.activityMention"></style>

    <style name="AppTheme.layoutActivity">
        <item name="android:background">@color/secondDarkColor</item>
    </style>

    <style name="AppTheme.buttonLight">
        <item name="android:background">@color/firstLightColor</item>
        <item name="android:textColor">@color/firstDarkColor</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
